<% provide(:title, @event.title) %>
<h2><%= @event.title %></h2> 

<%= simple_fields_for(@event) do |f| %>
  <div class="row-fluid">
    <div class="span6">
      <%= render 'shared/error_messages' %>
      <table class="table table-striped table-hover">
        <tr>
          <th>Email</th>
        </tr>
      <% @event.users.each do |user| %>
        </tr>
          <td><%= link_to user.email, user %></td>
        </tr>
       <% end %>
     </table>
       <% if user_signed_in? %>
        <div class="pull-right">

        </div>
       <% end %>
     </div>
  </div>
<% end %>